{
  "manifest_version": 3,
  "name": "ClickUp Task Viewer",
  "version": "1.0",
  "description": "Shows ClickUp task details from Gmail CC",
  "action": {
    "default_popup": "index.html",
    "default_title": "ClickUp Task"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
 
}


