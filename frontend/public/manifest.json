{
  "manifest_version": 3,
  "name": "ClickUp Gmail Helper",
  "version": "1.0",
  "description": "Extract ClickUp Task IDs from Gmail and show task details.",
  "action": {
    "default_popup": "index.html",
    "default_title": "ClickUp Helper"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*", "http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
